<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:background="@drawable/bg_dialog"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp">

        <ImageView
            android:id="@+id/iv_dialog"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/dialog_processing"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_300dp"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_120dp"
        android:overScrollMode="never"
        android:padding="@dimen/dimen_10dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5dp">

        <Button
            android:id="@+id/btn_dialog_redo"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button"
            android:text="@string/dialog_redo"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:background="@drawable/button"
            android:text="@string/dialog_confirm"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@drawable/btn_clean_light" />
</FrameLayout>